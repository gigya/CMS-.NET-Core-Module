@model Sitecore.Gigya.Module.Models.GigyaLoginViewModel

@if (!string.IsNullOrEmpty(Model.ContainerId))
{
    <div id="@Model.GeneratedContainerId" data-gigya-container-id="@Model.ContainerId" class="gigya-cms-embedded-screen" data-gigya-screen="@Model.ScreenSet" data-gigya-start-screen="@Model.StartScreen"></div>
}
else
{
    <button type="button" data-gigya-screen="@Model.ScreenSet" data-gigya-start-screen="@Model.StartScreen" class="gigya-cms-login">@Model.Label</button>
}
<input type="hidden" class="gigya-cms-logged-in-url" value="@Model.LoggedInUrl" />