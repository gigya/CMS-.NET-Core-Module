@model Gigya.Module.Core.Mvc.Models.GigyaSettingsViewModel
@using System.Web

<script src="https://cdns.@(Model.DataCenter).gigya.com/js/gigya.js?apiKey=@Model.ApiKey">
    @Html.Raw(Model.SettingsJson)
</script>
<script>
    var gigyaConfig = {
        errorMessage: '@HttpUtility.JavaScriptStringEncode(Model.ErrorMessage)',
        id: @Model.Id,
        loggedInRedirectUrl: '@HttpUtility.JavaScriptStringEncode(Model.LoggedInRedirectUrl)',
        logoutRedirectUrl: '@HttpUtility.JavaScriptStringEncode(Model.LogoutUrl)',
        debugMode: @Model.DebugMode.ToString().ToLowerInvariant(),
        authenticated: @Model.IsLoggedIn.ToString().ToLowerInvariant()
    };
</script>
<script src="@Model.GigyaScriptPath"></script>